<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/toolbar_setting"
        layout="@layout/toolbar"/>

    <RelativeLayout
        android:id="@+id/activity_settings_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_setting"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/settings_title_display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:text="Display Name"/>

        <EditText
            android:id="@+id/activity_settings_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:padding="10dp"
            android:layout_below="@+id/settings_title_display_name"
            android:hint="Actual display name"/>


        <Button
            android:id="@+id/activity_settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change"
            android:background="@color/navigation_drawer_background"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/settings_title_display_name"
            android:layout_toEndOf="@+id/activity_settings_display_name"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/activity_settings_name_layout"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:id="@+id/activity_settings_button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:background="@color/navigation_drawer_background"
            android:layout_centerInParent="true"
            android:padding="20dp"
            android:layout_margin="15dp"
            android:text="@string/settings_button_delete_account"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>