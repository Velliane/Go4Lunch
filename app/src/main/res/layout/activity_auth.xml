<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.activity.AuthActivity"
    android:id="@+id/auth_activity_layout"
    android:background="@drawable/restaurant_3">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/icon1"
            android:contentDescription="Application's icon" />
    </LinearLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_weight="0.8"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_vertical">
    <Button
        android:id="@+id/auth_activity_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="facebook"/>

    <Button
        android:id="@+id/auth_activity_google"
        style="@style/ButtonGoogleSignIn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center" />

   <Button
       android:id="@+id/sign_out"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:text="Sign OUT"/>


    </LinearLayout>

</LinearLayout>