<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/autocomplete_layout"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="8dp"
    android:background="@android:color/white"
    android:visibility="visible">

    <!-- Search ImageView-->
    <ImageView
        android:id="@+id/autocomplete_restaurant_search_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:src="@drawable/baseline_search_white_36" />

    <!-- Autocomplete editText-->
    <AutoCompleteTextView
        android:id="@+id/autocomplete_restaurant_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:maxLines="1"
        android:layout_toEndOf="@id/autocomplete_restaurant_search_image"
        android:background="@null"
        android:hint="restaurant"
        android:imeOptions="actionSearch"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <!--Micro ImageVIew -->
    <ImageView
        android:id="@+id/autocomplete_restaurant_micro_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:src="@drawable/baseline_search_white_36" />
</RelativeLayout>