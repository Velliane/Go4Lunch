<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/chat_item_constraint_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

            <TextView
                android:id="@+id/chat_item_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxWidth="280dp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/chat_message_background"
                android:padding="8dp"
                android:text="Example of message"
                android:textColor="@color/colorAccent"
                android:maxLines="3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/image_profile"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/chat_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"
                android:text="Date"
                android:textAlignment="textEnd"
                app:layout_constraintRight_toLeftOf="@id/image_profile"
                app:layout_constraintTop_toBottomOf="@id/chat_item_message"
                android:textSize="10sp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/user"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

</androidx.constraintlayout.widget.ConstraintLayout>