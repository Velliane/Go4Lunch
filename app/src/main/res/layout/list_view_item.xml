<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/item_description"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:gravity="center_vertical"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_infos"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_name_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="Name"/>

        <TextView
            android:id="@+id/item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:maxLength="40"
            android:maxLines="1"
            android:textSize="11dp"
            android:text="Style - Address"/>

        <TextView
            android:id="@+id/item_open_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="11dp"
            android:textStyle="italic"
            android:text="hours" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_infos"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/item_description"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:text="120m" />

        <TextView
            android:id="@+id/item_nbr_workmates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="number"/>

        <TextView
            android:id="@+id/item_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="stars" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/item_infos"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:contentDescription="Photo" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>